      <div id="page-wrap">
        <div class="row">
            <h1 class="what_heading">What I do</h1>
              <li>Valid and Semantic HTML5</li>
              <li>Proper use of CSS3</li>
              <li>Lightweight Javascript</li>
              <li>Efficient Jquery</li>
              <li>Effortless Branching and Merging with Git</li>
              <li>Deployment to Heroku</li>
              <li>Ruby on Rails</li>
              <li>Proper Tags and Keywords for SEO</li>
              <li>Django</li>
          </div>             
<div class="content" id="contact">
    <div align="center">
      <div id="contact_wrapper" class="ui tertiary form segment">
        <h3>Want something built? Send me a message</h3>
        <%= simple_form_for @contact, :html => {:class => 'ui form attached fluid segment' } do |f| %>
          <div class="field" id="name">
            <label><label>
            <%= f.input :name, :required => true %>
          </div>
          <div class="field" id="email">
            <label><label>
          <%= f.input :email, :required => true %>
          </div>
          <div class="field">
            <label><label>
          <%= f.input :message, :as => :text, :required => true %>
          </div>
          <div>
            </br>
            <%= f.button :submit, 'Send message', :class=> "ui blue submit button", :id=>'submit_button' %>
          </div>
        <% end %>
      </div>
    </div>
</div>
</div>
</div>
    <section class="column-group gutters">
        <footer class="clearfix">
            <div class="ink-grid">
                <ul class="unstyled inline half-vertical-space">
                </ul>
                <p class="note">All rights reserved.</p>
            </div>
        </footer>
    </section>
    <script>
    $('#awesome').addClass('animated zoomInLeft');
    </script>
