#contact_wrapper{
    width:100%;
    min-width:300px;
    background-color:#1a1a1a;
    
    border-radius:2px;
}
#contact_wrapper h3{
    color:white;
}

input:hover, input:active, input:focus{
    box-shadow: inset 0 0 2px #81b900!important;
}

textarea:hover, textarea:active, textarea:focus{
    box-shadow: inset 0 0 2px #81b900!important;
}

label{
    color:white;
}

#submit_button{
    background-color: #81b900;
}
@media only screen and (max-width:450px){
    .post h2{
        width:100%;
    }
     .postwords_left{
    margin-right:100px;
    margin-top:100px;

  }

  .postwords_right{
    margin-left:100px;
    margin-top:100px;
  }
}
</style>
        <div id="page-wrap">
            <h1>Some Recent Projects I've worked on...</h1>
        <div class="post">
          <div class="parallax2">
            <div class="postwords">
              <div class="animated fadeIn" id="main">Frenvu</div>
            </div>
            <div class="postwords_left">
              <div class="animated fadeIn" id="main">Django.</div>
            </div>
            <div class="postwords_right">
              <div class="animated fadeIn" id="main">Responsive.</div>
            </div>
          </div>
        </div>
        <div class="post">
          <div class="parallax3">
            <div class="postwords">
             <div class="animated fadeIn" id="main">Trackr</div>
            </div>
            <div class="postwords_left">
              <div class="animated fadeIn" id="main">Ruby on Rails.</div>
            </div>
            <div class="postwords_right">
              <div class="animated fadeIn" id="main">HTML5.</div>
            </div>
          </div>
        </div>      
    </div>
<div class="content" id="contact">
    <div align="center">
      <div id="contact_wrapper" class="ui tertiary form segment">
        <h3>Want something built? Send me a message</h3>
        <%= simple_form_for @contact, :html => {:class => 'ui form attached fluid segment' } do |f| %>
          <div class="field" id="name">
            <label><label>
            <%= f.input :name, :required => true %>
          </div>
          <div class="field" id="email">
            <label><label>
          <%= f.input :email, :required => true %>
          </div>
          <div class="field">
            <label><label>
          <%= f.input :message, :as => :text, :required => true %>
          </div>
          <div>
            </br>
            <%= f.button :submit, 'Send message', :class=> "ui blue submit button", :id=>'submit_button' %>
          </div>
        <% end %>
      </div>
    </div>
</div>
</div>
    <section class="column-group gutters">
        <footer class="clearfix">
            <div class="ink-grid">
                <ul class="unstyled inline half-vertical-space">
                </ul>
                <p class="note">All rights reserved.</p>
            </div>
        </footer>
    </section>
