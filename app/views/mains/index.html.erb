  list-style: none outside none;
  font-size: 18px;
  display: inline-block;
  width: 33%;
  height: 80px;
  text-align: center;
}
.row li:hover{
  color:#2ecc71;
}
.top-bar{
  background:none repeat scroll 0% 0% #34495e;
}
#contact_wrapper{
  background-color: #34495e!important;
}
.top-bar .name h1 a{
  max-width:175px;
